@{
    ViewBag.Title = "ChiTietCTDaoTao";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}
<style>
    th, tr {
        color: black;
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="page-title" style="font-family:Roboto">&emsp;CHƯƠNG TRÌNH ĐÀO TẠO KHÓA @ViewData["Khoa"] NGÀNH @ViewData["Nganh"].ToString().ToUpper()</h4>
            <div class="page-title-right" id="btnFunction">
                <form>
                    <button type="submit" id="button" name="button" value="Trở về" class="btn btn-secondary btn-rounded">
                        <i class="mdi mdi-microsoft-excel"></i> Trở về
                    </button>
                    <button type="button" id="button" name="button" value="Xác nhận" class="btn btn-secondary btn-rounded " data-toggle="modal" data-target="#modelId">
                        <i class="mdi mdi-delete-outline"></i> Xác nhận
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
@foreach (var khoikienthuc in ViewData["listkkt"] as List<WebApplication.Models.KhoiKienThuc>)
{
    <div class="col-xl-12">
        <div class="card-box">
            <div class="dropdown float-right">
            </div>
            <h4 class="header-title mt-0 mb-3" style="font-family: Roboto;">@khoikienthuc.TenKhoiKienThuc</h4>

            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr style="background-color:lightblue">
                            <th>STT</th>
                            <th>Mã học phần</th>
                            <th>Tên học phần</th>
                            <th>Số tín chỉ</th>
                            <th>BB/TC</th>
                            <th>Tiên quyết</th>
                            <th>Học trước</th>
                            <th>Song hành</th>
                            <th>Học kỳ</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hocphan in ViewData["listhp"] as List<WebApplication.Models.HocPhanDaoTao>)
                        {
                            if (hocphan.KhoiKienThuc.ID == khoikienthuc.ID)
                            {
                                STT++;
                                <tr>
                                    <td>@STT</td>
                                    <td>@hocphan.MaHocPhan</td>
                                    <td>@hocphan.TenHocPhan</td>
                                    <td>@hocphan.SoTinChi</td>
                                    @if (hocphan.ID_HocPhanTuChon == null)
                                    {
                                        <td>BB</td>
                                    }
                                    else
                                    {
                                        <td>TC</td>
                                    }
                                    <td>
                                        @foreach (var rangbuoc in ViewData["listhprb"] as List<WebApplication.Models.RangBuocHocPhan>)
                                        {
                                            if (rangbuoc.LoaiRangBuoc == "Tiên quyết" && rangbuoc.HocPhanDaoTao1.ID == hocphan.ID)
                                            {
                                                if (rangbuoc.HocPhanDaoTao.MaHocPhan != null)
                                                {
                                                    <p title="@rangbuoc.HocPhanDaoTao.TenHocPhan">
                                                        @rangbuoc.HocPhanDaoTao.MaHocPhan
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p>
                                                        @rangbuoc.HocPhanDaoTao.TenHocPhan
                                                    </p>
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @foreach (var rangbuoc in ViewData["listhprb"] as List<WebApplication.Models.RangBuocHocPhan>)
                                        {
                                            if (rangbuoc.LoaiRangBuoc == "Học trước" && rangbuoc.HocPhanDaoTao1.ID == hocphan.ID)
                                            {
                                                if (rangbuoc.HocPhanDaoTao.MaHocPhan != null)
                                                {
                                                    <p title="@rangbuoc.HocPhanDaoTao.TenHocPhan">
                                                        @rangbuoc.HocPhanDaoTao.MaHocPhan
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p>
                                                        @rangbuoc.HocPhanDaoTao.TenHocPhan
                                                    </p>
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @foreach (var rangbuoc in ViewData["listhprb"] as List<WebApplication.Models.RangBuocHocPhan>)
                                        {
                                            if (rangbuoc.LoaiRangBuoc == "Song hành" && rangbuoc.HocPhanDaoTao.ID == hocphan.ID)
                                            {
                                                if (rangbuoc.HocPhanDaoTao.MaHocPhan != null)
                                                {
                                                    <p title="@rangbuoc.HocPhanDaoTao.TenHocPhan">
                                                        @rangbuoc.HocPhanDaoTao.MaHocPhan
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p>
                                                        @rangbuoc.HocPhanDaoTao.TenHocPhan
                                                    </p>
                                                }
                                            }
                                        }
                                    </td>
                                    <td>&emsp;@hocphan.HocKy</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@foreach (var rangbuoc in ViewData["listhprb"] as List<WebApplication.Models.RangBuocHocPhan>)
{
    <p>@rangbuoc.HocPhanDaoTao.TenHocPhan và @rangbuoc.HocPhanDaoTao1.TenHocPhan và @rangbuoc.LoaiRangBuoc</p>
}