@model IEnumerable<WebApplication.Models.KhoaDaoTao>

@{
    ViewBag.Title = "IndexKhoa";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="page-title" style="font-family:Roboto">&emsp;KHÓA ĐÀO TẠO</h4>
                    <div class="page-title-right">
                        <form>
                            <button type="submit" id="button" formaction="@Url.Action("TaoMoiKhoa")" class="btn btn-secondary btn-rounded">
                                Tạo mới
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12">
            <div class="card-box">
                <div class="dropdown float-right">
                </div>
                <div class="table-responsive" style="overflow: auto; height: 300px;">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Khóa</th>
                                <th>Điều chỉnh</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                STT++;
                                <tr>
                                    <td>@STT</td>
                                    <td>@item.Khoa</td>
                                    <td>
                                        @*<a href="@Url.Action("SuaKhoaDT", new { id = item.ID })">Sửa</a> |*@
                                        <a href="@Url.Action("XoaKhoaDT", new { id = item.ID })">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
