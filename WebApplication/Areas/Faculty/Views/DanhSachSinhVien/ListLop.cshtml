}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "TaoMoiLop")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChuNhiem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhoaDaoTao.Khoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NganhDaoTao.Nganh)
        </th>
        <th></th>
