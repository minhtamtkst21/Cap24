        <td>
            @Html.DisplayFor(modelItem => item.TenLop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChuNhiem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhoaDaoTao.Khoa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NganhDaoTao.Nganh)
        </td>
        <td>
            @Html.ActionLink("SuaLop", "SuaLop", new { id=item.ID }) |
