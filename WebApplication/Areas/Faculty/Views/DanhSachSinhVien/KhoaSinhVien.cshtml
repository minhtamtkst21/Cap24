                                    <input type="submit" class="btn btn-secondary" value="Xem trước" formmethod="post" formaction="@Url.Action("XemTruocThongKe", "DanhSachSinhVien", new { enctype = "multipart/form-data" })" />
                                    <input type="submit" class="btn btn-primary" value="Tải lên" />
                                </div>
                            }
