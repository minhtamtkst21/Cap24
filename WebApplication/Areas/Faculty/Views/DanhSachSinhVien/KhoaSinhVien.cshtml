@model IEnumerable<WebApplication.Models.KhoaDaoTao>

@{
    ViewBag.Title = "KhoaSinhVien";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="page-title" style="font-family:Roboto">DANH SÁCH SINH VIÊN</h4>
            <div class="page-title-right">
                <form>
                    <button type="button" id="button" name="button" value="Upload" class="btn btn-secondary btn-rounded" data-toggle="modal" data-target="#modelId1"><i class="fas fa-search"></i> Tìm kiếm</button>
                    <input type="file" id="file" style="display:none;" />
                    <button type="button" id="button" name="button" value="Upload" class="btn btn-secondary btn-rounded" data-toggle="modal" data-target="#exampleModal">
                        <i class="mdi mdi-microsoft-excel"></i> Import
                    </button>
                    <button type="submit" formaction="@Url.Action("XuatDSSV")" id="button" name="button" value="" class="btn btn-secondary btn-rounded"><i class="mdi mdi-microsoft-excel"></i> Export</button>
                </form>
            </div>

        </div>
    </div>
</div>
<script>
    function XacNhanXoa(val) {
        document.getElementById("textKhoa").innerHTML = val;
    }
</script>
<!-- end page title -->
<div class="row">
    <div class="col-xl-6">
        <div class="card-box taskboard-box">
            <ul class="sortable-list list-unstyled taskList" id="upcoming">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="kanban-box">
                            <div class="kanban-detail">
                                <form>
                                    <a value="@item.Khoa" type="button" class="badge badge-danger float-right" href="#modelId" style="color: white;" data-toggle="modal" data-target="#modelId" onclick="XacNhanXoa(@item.Khoa)"><i class="fas fa-times"></i></a>
                                    <h4 class="mt-0"><a href="@Url.Action("NganhSinhVien", new { id = item.ID })" class="text-dark">Danh sách sinh viên Khóa @item.Khoa</a></h4>
                                </form>
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <!-- Modal -->
            <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" style="font-family: Roboto;">Xóa danh sách sinh viên</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid text-center">
                                Xác nhận xóa Danh sách sinh viên
                            </div>
                            <div for="recipient-name" class="col-form-label">Nhập "Danh sách sinh viên Khóa - <span id="textKhoa"></span>" để xác nhận xóa:</div>
                            <input type="text" class="form-control" id="textXacNhan" onchange="GetText(this.value)" placeholder="Danh sách sinh viên Khóa - 24">
                            <input id="textXacNhan" value="Danh sách sinh viên Khóa - 24" hidden/>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="button" id="XacNhanBtn" class="btn btn-primary" disabled>Xóa</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="modelId1" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" style="font-family: Roboto;">Tìm kiếm sinh viên</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search...">
                            <div class="input-group-append">
                                <button class="btn btn-secondary" type="submit">
                                    <i class="fe-search"></i>
                                </button>
                            </div>
                            <div class="table-responsive text-nowrap">
                                <table class="table table-striped mb-0 dt-responsive" id="table" id="datatable">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>MSSV</th>
                                            <th>Họ</th>
                                            <th>Tên</th>
                                            <th>Ngày sinh</th>
                                            <th>Giới tính</th>
                                            <th>Tình trạng</th>
                                            <th>Khóa học</th>
                                            <th>Mã lớp SV</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>187PM20547</td>
                                            <td>Nguyễn Duy</td>
                                            <td>Phương</td>
                                            <td>25/05/1999</td>
                                            <td>Nam</td>
                                            <td>Còn học</td>
                                            <td>K24</td>
                                            <td>K24T-PM1</td>
                                            <td><a href="#">Xem thêm</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <!-- <button type="button" class="btn btn-primary">Save</button> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
