@model WebApplication.Models.SinhVien

@{
    ViewBag.Title = "ListSinhVien";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-sinhviens-center justify-content-between">
                <h4 class="page-title" style="font-family:Roboto">DANH SÁCH SINH VIÊN </h4>
                <div class="page-title-right">
                    <!-- <div class="container">
                        <input type="text" id="search" placeholder="Search..." style="color: black;">
                        <div class="search"></div>
                    </div> -->
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-sinhvien"><a href="select-class.html"></a></li>
                        <li class="breadcrumb-sinhvien active">Danh sách sinh viên lớp </li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table class="table table-striped mb-0 dt-responsive" id="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>MSSV</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Giới tính</th>
                                    <th>Tình trạng</th>
                                    <th>Khóa học</th>
                                    <th>Mã lớp SV</th>
                                    <th>Email_1</th>
                                    <th>Email_2</th>
                                    <th>Mã nghành</th>
                                    <th>Điện thoại di động</th>
                                    <th>ĐTDĐ của cha</th>
                                    <th>ĐTDĐ của mẹ</th>
                                    <th>Địa chỉ thường trú</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sinhvien in ViewData["SinhVien"] as List<WebApplication.Models.SinhVien>)
                                {
                                    STT++;
                                    <tr>
                                        <td>@STT</td>
                                        <td>@sinhvien.MSSV</td>
                                        <td>@sinhvien.Ho</td>
                                        <td>@sinhvien.Ten</td>
                                        <td>@sinhvien.NgaySinh</td>
                                        <td>@sinhvien.GioiTinh</td>
                                        <td>@sinhvien.TinhTrang</td>
                                        <td></td>
                                        <td>@sinhvien.ID_Lop</td>
                                        <td>@sinhvien.Email_1</td>
                                        <td>@sinhvien.Email_2</td>
                                        <td></td>
                                        <td>@sinhvien.DTDD</td>
                                        <td>@sinhvien.DTCha</td>
                                        <td>@sinhvien.DTMe</td>
                                        <td>@sinhvien.DiaChi</td>
                                    </tr>
                                 }
                                </tbody>
                        </table>
                    </div> <!-- end .table-responsive-->
                </div> <!-- end card-body -->
            </div> <!-- end card -->
        </div> <!-- end col -->
    </div> <!-- end row -->
