        var button = $(event.relatedTarget);
        var modal = $(this);

    });
</script>
<script>
    var $rows = $('#table tr');
    $('#search').keyup(function () {
        var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();
        $rows.show().filter(function () {
            var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
            return !~text.indexOf(val);
        }).hide();
    });
</script>
<script>
    const excel_file = document.getElementById('file_excel');
    excel_file.addEventListener('change', (event) => {
        var reader = new FileReader();
        reader.readAsArrayBuffer(event.target.files[0]);
        reader.onload = function (event) {
            var data = new Uint8Array(reader.result);
            var work_book = XLSX.read(data, { type: 'array' });
            var sheet_name = work_book.SheetNames;
            var sheet_data = XLSX.utils.sheet_to_json(work_book.Sheets[sheet_name[0]], { header: 1 });
            var soluong = sheet_data.length - 1;
            if (sheet_data.length > 0) {
                var table_output = '<div class="row"><div class="col-xl-6"><table class="table table-hover mb-0">';
                table_output += '<tr>';
                table_output += '<td>Số lượng sinh viên: ' + soluong + '</td>';
                table_output += '</tr>';
                var nganh = new Array();
                var slnganh = new Array();
                var khoa = new Array();
                var slkhoa = new Array();
                var lop = new Array();
                var sllop = new Array();
                for (var i = 1; i < sheet_data.length; i++) {
                    if (i == 1) {
                        nganh[0] = sheet_data[1][10];
                        slnganh[0] = 1;
                        khoa[0] = sheet_data[1][6];
                        slkhoa[0] = 1;
                    }
                    else {
                        var dknganh = 0;
                        var dkkhoa = 0;
                        var dklop = 0;
                        for (var item = 0; item < nganh.length; item++) {
                            if (sheet_data[i][10] == nganh[item]) {
                                slnganh[item]++;
                                dknganh++;
                            }
                        }
                        if (dknganh == 0) {
                            nganh[nganh.length] = sheet_data[i][10];
                            slnganh[slnganh.length] = 1;
                        }
                        for (var item = 0; item < khoa.length; item++) {
                            if (sheet_data[i][6] == khoa[item]) {
                                slkhoa[item]++;
                                dkkhoa++;
                            }
                        }
                        if (dkkhoa == 0) {
                            khoa[khoa.length] = sheet_data[i][6];
                            slkhoa[slkhoa.length] = 1;
                        }
                        for (var item = 0; item < lop.length; item++) {
                            if (sheet_data[i][7] == lop[item]) {
                                sllop[item]++;
                                dklop++;
                            }
                        }
                        if (dklop == 0) {
                            lop[lop.length] = sheet_data[i][7];
                            sllop[sllop.length] = 1;
                        }
                    }
                }
                for (var i = 0; i < khoa.length; i++) {
                    table_output += '<tr>';
                    table_output += '<td> Khóa: ' + khoa[i] + " có số lượng sinh viên là: " + slkhoa[i] + '</td>';
                    table_output += '</tr>';
                }
                for (var i = 0; i < nganh.length; i++) {
                    table_output += '<tr>';
                    table_output += '<td> Mã ngành: ' + nganh[i] + " có số lượng sinh viên là: " + slnganh[i] + '</td>';
                    table_output += '</tr>';
                }
                table_output += '</table></div>';
                table_output += '<div class="col-xl-6"><table class="table table-hover mb-0">';
                table_output += '<tr><td> Số lượng lớp: ' + lop.length + '</td></tr>';
                for (var i = 0; i < lop.length; i++) {
                    table_output += '<tr>';
                    table_output += '<td> Lớp: ' + lop[i] + " có số lượng sinh viên là: " + sllop[i] + '</td>';
                    table_output += '</tr>';
                }
                table_output += '</table></div></div>';
                document.getElementById('excel_data').innerHTML = table_output;
            }
        }
    });
</script>
