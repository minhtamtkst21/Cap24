@model IEnumerable<WebApplication.Models.SinhVien>

@{
    ViewBag.Title = "ListSinhVien";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}
<link href="@Url.Content("~/Faculty_assets/css/search.css")" rel="stylesheet" type="text/css" />
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-sinhviens-center justify-content-between">
            <h4 class="page-title" style="font-family:Roboto">DANH SÁCH SINH VIÊN LỚP @Model.First().LopQuanLy.TenLop - NGÀNH @Model.First().LopQuanLy.NganhDaoTao.Nganh.ToUpper() KHÓA @Model.First().LopQuanLy.KhoaDaoTao.Khoa</h4>
            <div class="page-title-right">
                <div class="container">
                    <input type="text" id="search" placeholder="Search..." style="color: black;">
                    <div class="search"></div>
                </div>
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-sinhvien"><a href="select-class.html"></a></li>
                </ol>
            </div>

        </div>
    </div>
</div>

<!-- end page title -->

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-striped mb-0 dt-responsive" id="table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>MSSV</th>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Tình trạng</th>
                                <th>Email </th>

                            </tr>
                        </thead>
                        <tbody id="table">
                            @foreach (var sinhvien in Model)
                            {
                                STT++;
                                <tr data-toggle="modal" data-target="#modelId">
                                    <td>@STT</td>
                                    <td>@sinhvien.MSSV</td>
                                    <td>@sinhvien.Ho</td>
                                    <td>@sinhvien.Ten</td>
                                    <td>@sinhvien.NgaySinh</td>
                                    <td>@sinhvien.GioiTinh</td>
                                    <td>@sinhvien.TinhTrang.TenTinhTrang</td>
                                    <td>@sinhvien.Email_1</td>
                                </tr>
                                <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" style="font-family: Roboto;"> sinh viên @sinhvien.Ho @sinhvien.Ten - <span id="textMSSV"></span> </h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container-fluid text-center">
                                                    Thông tin sinh viên @sinhvien.Ho @sinhvien.Ten - <span id="textMSSV"></span>
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Mã số sinh viên: <span id="textMSSV"></span>
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Họ sinh viên: <span id="textHo"></span>
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Tên sinh viên: @sinhvien.Ten
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Ngày sinh: @sinhvien.NgaySinh
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Giới Tính: @sinhvien.GioiTinh
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Tình trạng: @sinhvien.TinhTrang.TenTinhTrang
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Email 1: @sinhvien.Email_1
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Email 2: @sinhvien.Email_2
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    SDT : @sinhvien.DTDD
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    SDT Cha: @sinhvien.DTCha
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    SDT Mẹ: @sinhvien.DTMe
                                                </div>
                                                <br />
                                                <div class="container-fluid text-lg-left">
                                                    Địa Chỉ: @sinhvien.DiaChi
                                                </div>



                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }


                        </tbody>
                    </table>
                </div> <!-- end .table-responsive-->
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div> <!-- end row -->
<script>


    function MSSV(val) {
        document.getElementById("textMSSV").innerHTML = val;
    }
    function Ho(val) {
        document.getElementById("textHo").innerHTML = val;
    }
</script>

