@model IEnumerable<WebApplication.Models.Lop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="page-title" style="font-family:Roboto">&emsp;LỚP HỌC</h4>
            <div class="page-title-right">
                @using (Html.BeginForm("UploadMonHoc", "Curriculums", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="page-title-right">
                        <input type="file" id="file" name="UploadedFile" />
                        <button type="submit" id="button" name="button" value="Upload" class="btn btn-secondary btn-rounded ">
                            <i class="mdi mdi-microsoft-excel"></i> Tải lên
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="col-xl-12">
    <div class="card-box">
        <div class="dropdown float-right">
        </div>
        <h4 class="header-title mt-0 mb-3" style="font-family: Roboto;">Lớp học</h4>

        <div class="table-responsive" style="overflow: auto; height: 300px;">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên lớp</th>
                        <th>Chủ nhiệm lớp</th>
                        <th>Điều chỉnh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        STT++;
                        <tr>
                            <td>@STT</td>
                            <td>@item.TenLop</td>
                            <th>@item.GiangVien.TenGV</th>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.ID })">Sửa</a> |
                                <a href="@Url.Action("Delete", new { id = item.ID })">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
