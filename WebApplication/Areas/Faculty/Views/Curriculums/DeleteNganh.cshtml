@model WebApplication.Models.Nganh

@{
    ViewBag.Title = "DeleteNganh";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
}

<h2>Xóa ngành @Model.TenNganh</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Nganh</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên ngành
        </dt>

        <dd>
            @Model.TenNganh
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="bbtn btn-secondary btn-rounded" /> |
            @Html.ActionLink("Trở về", "IndexNganh")
        </div>
    }
</div>
