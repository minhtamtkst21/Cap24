@model IEnumerable<WebApplication.Models.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="page-title" style="font-family:Roboto">&emsp;CHƯƠNG TRÌNH ĐÀO TẠO</h4>
            <div>
                <select class="browser-default custom-select" aria-label="Default select example">
                    <option selected>Chọn khóa</option>
                    @foreach (var item in ViewData["Khoa"] as List<WebApplication.Models.Khoa>)
                    {
                        <option value="">@item.TenKhoa</option>
                    }
                </select>
            </div>
            <div>
                <select class="browser-default custom-select" aria-label="Default select example">
                    <option selected>Chọn ngành</option>
                    @foreach (var item in ViewData["Nganh"] as List<WebApplication.Models.Nganh>)
                    {
                        <option value="">@item.TenNganh</option>
                    }
                </select>
            </div>
            <div>
                <select class="browser-default custom-select" aria-label="Default select example">
                    <option selected>Chọn học kỳ</option>
                    @foreach (var hocky in ViewData["HocKy"] as List<WebApplication.Models.HocKy>)
                    {
                        <option value="">@hocky.HK</option>
                    }
                </select>
            </div>
            @using (Html.BeginForm("UploadMonHoc", "Curriculums", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div>
                    <input type="file" id="file" name="UploadedFile" />
                    <button type="submit" id="button" name="button" value="Upload" class="btn btn-secondary btn-rounded ">
                        <i class="mdi mdi-microsoft-excel"></i> Tải lên
                    </button>
                </div>
            }
            <div class="page-title-right">
                <form>
                    <button type="submit" id="button" formaction="@Url.Action("ExportExcel")" class="btn btn-secondary btn-rounded">
                        Xuất Excel
                    </button>
                </form>
            </div>
            <div class="page-title-right">
                <form>
                    <button type="submit" id="button" formaction="@Url.Action("Print")" class="btn btn-secondary btn-rounded">
                        In
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
@foreach (var khoikienthuc in ViewData["KhoiKienThuc"] as List<WebApplication.Models.KhoiKienThuc>)
{
    STT = 0;
    <div class="col-xl-12">
        <div class="card-box">
            <div class="dropdown float-right">
            </div>
            <h4 class="header-title mt-0 mb-3" style="font-family: Roboto;">@khoikienthuc.KhoiKT</h4>
            <div class="table-responsive" style="overflow: auto; height: 300px;">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã học phần</th>
                            <th>Tên học phần</th>
                            <th>Số tín chỉ</th>
                            <th>BB/TC</th>
                            <th>Học kỳ</th>
                            <th>Điều chỉnh</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var monhoc in Model)
                        {
                            if (monhoc.KhoiKienThuc1.KhoiKT == khoikienthuc.KhoiKT)
                            {
                                STT++;
                                <tr>
                                    <td>@STT</td>
                                    <td>@monhoc.MaMonHoc </td>
                                    <td>@monhoc.TenMocHoc</td>
                                    <td>@monhoc.SoTinChi</td>
                                    @if (monhoc.BBTC == "BB")
                                    {
                                        <td>Bắc buộc</td>
                                    }
                                    else
                                    {
                                        <td>Tự chọn</td>
                                    }
                                    @if (monhoc.HocKy1 != null)
                                    {
                                        <td>@monhoc.HocKy1.HK</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td><a href="@Url.Action("EditMonHoc", new { id = monhoc.ID })">Sửa</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}