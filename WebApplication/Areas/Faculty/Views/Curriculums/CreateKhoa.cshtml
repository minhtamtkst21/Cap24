@model WebApplication.Models.Khoa

@{
    ViewBag.Title = "CreateKhoa";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
}

<h2>Thêm mới Khóa học</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Khóa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-secondary btn-rounded" />
                <input type="submit" value="Trở về" class="btn btn-secondary btn-rounded" formaction=@Url.Action("IndexKhoa", "Curriculums")/>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
