@model IEnumerable<WebApplication.Models.Nganh>

@{
    ViewBag.Title = "IndexNganh";
    Layout = "~/Views/Shared/Faculty_Layout.cshtml";
    int STT = 0;
}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="page-title" style="font-family:Roboto">&emsp;NGÀNH HỌC</h4>
                <div class="page-title-right">
                    <form>
                        <button type="submit" id="button" formaction="@Url.Action("CreateNganh")" class="btn btn-secondary btn-rounded">
                            Tạo mới
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="card-box">
            <div class="dropdown float-right">
            </div>
            <h4 class="header-title mt-0 mb-3" style="font-family: Roboto;">Ngành học</h4>

            <div class="table-responsive" style="overflow: auto; height: 300px;">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên ngành</th>
                            <th>Điều chỉnh</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            STT++;
                            <tr>
                                <td>@STT</td>
                                <td>@item.TenNganh</td>
                                <td>
                                    <a href="@Url.Action("EditNganh", new { id = item.ID })">Sửa</a> |
                                    <a href="@Url.Action("DeleteNganh", new { id = item.ID })">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>    
                </table>
            </div>
        </div>
    </div>
